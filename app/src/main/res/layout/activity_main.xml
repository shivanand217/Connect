<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.shiv.connect4.MainActivity">

    <GridLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="3"
        android:rowCount="3"
        android:background="@drawable/board"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/gridLayout">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_column="0"
            android:layout_row="0"
            android:contentDescription="@string/_1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="30dp"
            android:onClick="dropIn"
            android:tag="0" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageView10"
            android:layout_column="1"
            android:layout_row="0"
            android:contentDescription="@string/_2"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:onClick="dropIn"
            android:tag="1" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageView12"
            android:layout_column="2"
            android:layout_row="0"
            android:contentDescription="@string/_4"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:onClick="dropIn"
            android:tag="2"/>

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageView13"
            android:layout_column="0"
            android:layout_row="1"
            android:contentDescription="@string/_5"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="70dp"
            android:onClick="dropIn"
            android:tag="3"/>

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageView14"
            android:layout_column="1"
            android:layout_row="1"
            android:contentDescription="@string/_6"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="70dp"
            android:onClick="dropIn"
            android:tag="4"/>

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageView15"
            android:layout_column="2"
            android:layout_row="1"
            android:contentDescription="@string/_7"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="20dp"
            android:onClick="dropIn"
            android:tag="5"/>

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageView16"
            android:layout_column="0"
            android:layout_row="2"
            android:contentDescription="@string/_8"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="10dp"
            android:onClick="dropIn"
            android:tag="6"/>

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageView17"
            android:layout_column="1"
            android:layout_row="2"
            android:contentDescription="@string/_9"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="20dp"
            android:onClick="dropIn"
            android:tag="7" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageView11"
            android:layout_column="2"
            android:layout_row="2"
            android:contentDescription="@string/_3"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="20dp"
            android:onClick="dropIn"
            android:tag="8" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textSize="20sp"
            android:alpha="0" />

        <Button
            android:text="Play Again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playAgainButton"
            android:onClick="playAgain"
            android:alpha="0"
            android:background="@color/colorAccent"
            android:layout_marginLeft="10dp" />

    </GridLayout>


</RelativeLayout>
